{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ modificada",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "-Wextra",
                "-Wall",
                "-std=c++14",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/glad/*.c",
                "-o",
                "${fileDirname}/main",
                "-lGL",
                "-lglfw"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Task generated by Debugger modificado."
        }
    ]
}